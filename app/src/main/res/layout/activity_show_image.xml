<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowImage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/show_image_btn_logout"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/baseline_power_settings_new_black_18dp"/>

        <TextView
            android:id="@+id/show_image_username"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="@string/show_image_txt_points"/>

        <TextView
            android:id="@+id/show_image_txt_current_points"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="0.7"
        />

    <EditText
        android:id="@+id/et_image_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_image_view"
        android:hint="@string/show_image_answer_hint"
        android:layout_weight="0.1"/>

    <Button
        android:id="@+id/btn_image_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_image_text"
        android:text="@string/show_image_button_text"
        android:layout_weight="0.1"/>

</LinearLayout>